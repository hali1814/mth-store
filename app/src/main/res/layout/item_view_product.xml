<?xml version="1.0" encoding="utf-8"?>


    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/itemProduct_CardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:cardCornerRadius="10dp"
    android:layout_marginLeft="6dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <ImageView
                android:id="@+id/itemProduct_imgProduct"
                android:layout_width="140dp"
                android:layout_height="140dp"
                app:layout_constraintVertical_bias=".2"
                android:src="@drawable/product"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/itemProduct_tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arial_extra_bold"
                android:text="$1,047"
                android:textColor="@color/main_text"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/itemProduct_imgProduct"
                app:layout_constraintTop_toBottomOf="@+id/itemProduct_imgProduct" />

            <TextView
                android:id="@+id/itemProduct_tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apple watch SE 40mm"
                android:textSize="12sp"
                android:textColor="@color/main_text"
                app:layout_constraintStart_toStartOf="@+id/itemProduct_tvPrice"
                app:layout_constraintTop_toBottomOf="@+id/itemProduct_tvPrice" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

