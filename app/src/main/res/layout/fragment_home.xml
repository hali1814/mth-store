<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/back_ground"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeFragment">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:paddingRight="15dp"
    android:paddingLeft="15dp"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/fHome_tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arial_bold"
        android:text="Chọn danh mục"
        android:textColor="@color/main_text"
        android:textSize="24sp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".04" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/fHome_btnCart"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/btn_circle_background"
        android:src="@drawable/ic_cart"
        app:layout_constraintBottom_toBottomOf="@+id/fHome_tvTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fHome_tvTitle" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/fHome_btnPhone"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/btn_circle_white_stroke"
        android:layout_marginTop="20dp"
        app:layout_constraintVertical_bias=".05"
        android:src="@drawable/ic_phone_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fHome_tvTitle" />

    <TextView
        android:id="@+id/fHome_tvNamePhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Điên thoại"
        android:fontFamily="@font/arial_bold"
        android:textColor="@color/icon_second"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/fHome_btnPhone"
        app:layout_constraintStart_toStartOf="@+id/fHome_btnPhone"
        app:layout_constraintTop_toBottomOf="@+id/fHome_btnPhone" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/fHome_btnLaptop"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/btn_circle_white_stroke"
        android:src="@drawable/ic_baseline_laptop_24"
        app:layout_constraintEnd_toStartOf="@+id/fHome_btnWatch"
        app:layout_constraintHorizontal_bias=".2"
        app:layout_constraintStart_toEndOf="@+id/fHome_btnPhone"
        app:layout_constraintTop_toTopOf="@+id/fHome_btnPhone" />

    <TextView
        android:id="@+id/fHome_tvNameLaptop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arial_bold"
        android:textColor="@color/icon_second"
        android:layout_marginTop="8dp"
        android:text="Laptop"
        app:layout_constraintEnd_toEndOf="@+id/fHome_btnLaptop"
        app:layout_constraintStart_toStartOf="@+id/fHome_btnLaptop"
        app:layout_constraintTop_toBottomOf="@+id/fHome_btnPhone" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/fHome_btnHeadPhone"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/btn_circle_white_stroke"
        android:src="@drawable/ic_baseline_headset_24"
        app:layout_constraintEnd_toStartOf="@+id/fHome_btnWatch"
        app:layout_constraintHorizontal_bias=".8"
        app:layout_constraintStart_toEndOf="@+id/fHome_btnPhone"
        app:layout_constraintTop_toTopOf="@+id/fHome_btnLaptop" />

    <TextView
        android:id="@+id/fHome_tvHeadPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arial_bold"
        android:text="Tai nghe"
        android:textColor="@color/icon_second"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/fHome_btnHeadPhone"
        app:layout_constraintStart_toStartOf="@+id/fHome_btnHeadPhone"
        app:layout_constraintTop_toBottomOf="@+id/fHome_btnHeadPhone" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/fHome_btnWatch"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/btn_circle_white_stroke"
        android:src="@drawable/ic_baseline_watch_24"
        app:layout_constraintBottom_toBottomOf="@+id/fHome_btnPhone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fHome_btnPhone"
        app:layout_constraintVertical_bias=".05" />

    <TextView
        android:id="@+id/fHome_tvWatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:fontFamily="@font/arial_bold"
        android:textColor="@color/icon_second"
        android:text="Đồng hồ"
        app:layout_constraintEnd_toEndOf="@+id/fHome_btnWatch"
        app:layout_constraintStart_toStartOf="@+id/fHome_btnWatch"
        app:layout_constraintTop_toBottomOf="@+id/fHome_btnPhone" />

    <EditText
        android:id="@+id/fHome_edSearch"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/form_style_login"
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="10dp"
        android:hint="Tìm kiếm"
        android:paddingStart="20dp"
        android:textColor="@color/main_text"
        android:textColorHint="@color/hint"
        android:textCursorDrawable="@drawable/cursor_style"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/fHome_btnWatch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fHome_tvNameLaptop" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/fHome_btnFilter"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/btn_circle"
        android:src="@drawable/ic_filter"
        app:layout_constraintBottom_toBottomOf="@+id/fHome_edSearch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fHome_edSearch"
        app:layout_constraintTop_toTopOf="@+id/fHome_edSearch" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/fHome_imgBanner"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/banner"
        app:riv_corner_radius="5dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@+id/fHome_edSearch" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hot sale"
        android:textSize="19sp"
        android:textColor="@color/status_false"
        android:fontFamily="@font/arial_black"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/fHome_imgBanner"
        app:layout_constraintTop_toBottomOf="@+id/fHome_imgBanner" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>